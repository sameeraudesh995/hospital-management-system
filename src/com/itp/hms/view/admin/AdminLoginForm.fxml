<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500" prefWidth="700" styleClass="background" stylesheets="@../StyleSheets/styles.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.itp.hms.controller.admin.AdminLoginFormController">
    <children>
      <ImageView fitHeight="500.0" fitWidth="700.0" pickOnBounds="true">
         <image>
            <Image url="@../../Images/adminLoginPng.png" />
         </image>
      </ImageView>
        <!-- Background Rectangle -->
        <VBox fx:id="loginVBox" alignment="CENTER" layoutX="150" layoutY="75" prefHeight="350.0" prefWidth="400" spacing="20" style="-fx-background-color: #f0f8ff; -fx-border-color: #0747a6; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.15), 10, 0.5, 0, 2);">
            <children>
                <!-- Title -->
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0747a6;" text="Hospital Management System" />
                <!-- Username Field -->
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333333; -fx-font-weight: bold;" text="Username" />
                        <TextField fx:id="usernameField" prefWidth="250" promptText="Enter Username" style="-fx-background-color: #f7f7f7; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" />
                    </children>
                </HBox>
                <!-- Password Field -->
                <HBox alignment="CENTER" spacing="10">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-text-fill: #333333; -fx-font-weight: bold;" text="Password" />
                        <PasswordField fx:id="passwordField" prefWidth="250" promptText="Enter Password" style="-fx-background-color: #f7f7f7; -fx-border-color: #cccccc; -fx-border-radius: 5; -fx-background-radius: 5;" />
                    </children>
                </HBox>
                <!-- Buttons -->
                <VBox alignment="CENTER" spacing="15">
                    <children>
                        <Button fx:id="loginButton" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5;" text="Login" />
                        <Button fx:id="registerButton" onAction="#handleRegister" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-border-radius: 5; -fx-background-radius: 5;" text="Register" />
                    </children>
                </VBox>
            <Hyperlink text="Frogot password ?" />
            </children>
            <padding>
                <Insets bottom="20" left="20" right="20" top="20" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
