<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Font?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.itp.hms.controller.AdminRegisterFormController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox alignment="CENTER" spacing="20.0" layoutX="150.0" layoutY="50.0" prefWidth="300.0">
            <Label text="Admin Registration" textFill="#0747a6">
                <font>
                    <Font size="20.0" name="System Bold" />
                </font>
            </Label>
            <VBox spacing="15.0">
                <!-- Admin ID -->
                <Label text="Admin ID" textFill="#444">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="adminIdField" promptText="Enter Admin ID"
                           style="-fx-background-radius: 10; -fx-border-color: #ddd; -fx-padding: 8;" />

                <!-- Name -->
                <Label text="Name" textFill="#444">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="nameField" promptText="Enter Name"
                           style="-fx-background-radius: 10; -fx-border-color: #ddd; -fx-padding: 8;" />

                <!-- Password -->
                <Label text="Password" textFill="#444">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <PasswordField fx:id="passwordField" promptText="Enter Password"
                               style="-fx-background-radius: 10; -fx-border-color: #ddd; -fx-padding: 8;" />

                <!-- Contact Number -->
                <Label text="Contact Number" textFill="#444">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="contactNumberField" promptText="Enter Contact Number"
                           style="-fx-background-radius: 10; -fx-border-color: #ddd; -fx-padding: 8;" />

                <!-- Email -->
                <Label text="Email" textFill="#444">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="emailField" promptText="Enter Email"
                           style="-fx-background-radius: 10; -fx-border-color: #ddd; -fx-padding: 8;" />
            </VBox>
            <!-- Submit Button -->
            <Button text="Register" fx:id="registerButton"
                    style="-fx-background-color: #0747a6; -fx-text-fill: white; -fx-background-radius: 10; -fx-padding: 10; -fx-font-size: 14;" onAction="#handleRegisterButtonAction"/>
        </VBox>
    </children>

</AnchorPane>
