<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<AnchorPane styleClass="root" stylesheets="@../StyleSheets/CashireLogin.css" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/19" fx:controller="com.itp.hms.controller.cashier.CashierLoginForm">

    <ImageView fx:id="logoImage" fitHeight="100" fitWidth="100" layoutX="100" layoutY="20" pickOnBounds="true" preserveRatio="true" />

    <Text layoutX="50" layoutY="130" styleClass="welcome-text" text="Welcome to the Hospital Management System" />

    <Label layoutX="50" layoutY="170" text="Username:" />
    <TextField fx:id="usernameField" layoutX="150" layoutY="170" style="-fx-pref-width: 200 " />

    <Label layoutX="50" layoutY="210" text="Password:" />
    <PasswordField fx:id="passwordField" layoutX="150" layoutY="210" style="-fx-pref-width: 200 " />

    <HBox layoutX="150" layoutY="250" spacing="10">
        <Button onAction="#handleSubmitButtonAction" text="Sign In" />
        <Button onAction="#handleClearButtonAction" text="Clear" />
    </HBox>

    <Text fx:id="actiontarget" layoutX="150" layoutY="300" />
    <Hyperlink layoutX="150" layoutY="320" onAction="#handleSignUpAction" text="Sign Up" />
</AnchorPane>
